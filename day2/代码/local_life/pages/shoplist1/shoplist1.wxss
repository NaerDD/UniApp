.shop-item{
  display: flex;
  padding: 15rpx;
  border: 1rpx solid #a3a0a0;
  border-radius: 8rpx;
  margin: 15rpx;
  box-shadow:1rpx 1rpx 15rpx #ddd;
}
.thumb image{
  width: 250rpx;
  height: 250rpx;
  display: block;
  margin-right: 15rpx;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 24rpx;
}
.title1{
  font-weight: bold;
}